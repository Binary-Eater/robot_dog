<?xml version="1.0"?>
<robot name="oneleg">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>
  
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.14" radius="0.0127"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.0"/>   
      <material name="blue"/>
    </visual>
  </link>
  
  <link name="thigh">
    <visual>
      <geometry>
        <box size="0.15 0.035 0.006"/>
      </geometry>
      <material name="white"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>   
    </visual>
  </link>

  <link name="hip">
    <visual>
      <geometry>
        <cylinder length="0.045" radius="0.0127"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.0"/>   
      <material name="blue"/>
    </visual>
  </link>

  <joint name="base_to_thigh" type="fixed">
    <parent link="base_link"/>
    <child link="thigh"/>
    <origin xyz="-0.06 0 0.085"/>
  </joint>

  <joint name="thigh_to_hip" type="fixed">
    <parent link="thigh"/>
    <child link="hip"/>
    <origin xyz="-0.06 0 0.036 "/>
  </joint>


</robot>