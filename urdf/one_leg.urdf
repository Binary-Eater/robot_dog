<?xml version="1.0"?>
<robot name="oneleg">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>
  
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.045" radius="0.0127"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.0"/>   
      <material name="blue"/>
    </visual>
  </link>
  
  <link name="thigh_link">
    <visual>
      <geometry>
        <box size="0.15 0.035 0.006"/>
      </geometry>
      <material name="white"/>
      <origin rpy="0 0 0" xyz="0.0623 0 0"/>   
    </visual>
  </link>

    <link name="leg_link">
    <visual>
      <geometry>
        <cylinder length="0.14" radius="0.0127"/>
      </geometry>
      <material name="white"/>
      <origin rpy="0 0 0" xyz="0 0 -0.03"/>   
    </visual>
  </link>

  <joint name="hip_to_thigh" type="fixed">
    <parent link="base_link"/>
    <child link="thigh_link"/>
    <origin xyz="0 0 -0.03"/>
  </joint>

  <joint name="thigh_to_leg" type="fixed">
    <parent link="thigh_link"/>
    <child link="leg_link"/>
    <origin xyz="0.1246 0 -0.051 "/>
  </joint>

</robot>
